{
	"name": "matpad",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/matpad.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"matpad_bundle": "bun build --bundle source/matpad.js --outfile ./bin/bin.js --target=bun",
		"matpad_shim": "bun shim.js",
		"matpad_build": "bun build --compile --minify ./bin/bin.js --outfile ./bin/matpad && rm ./bin/bin.js",
		"compile": "bun run matpad_bundle && bun run matpad_shim && bun run matpad_build",
		"start": "bun source/matpad.js",
		"build": "babel --out-dir=dist source",
		"dev": "babel --out-dir=dist --watch source",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"copy-paste": "^2.2.0",
		"ink": "^4.1.0",
		"mathjs": "^15.1.1",
		"meow": "^11.0.0",
		"react": "^18.2.0",
		"react-devtools-core": "^7.0.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/preset-react": "^7.18.6",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"import-jsx": "^5.0.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"xo": "^0.53.1"
	},
	"ava": {
		"environmentVariables": {
			"NODE_NO_WARNINGS": "1"
		},
		"nodeArguments": [
			"--loader=import-jsx"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"babel": {
		"presets": [
			"@babel/preset-react"
		]
	}
}
